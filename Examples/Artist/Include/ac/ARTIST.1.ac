FN ESC_HANDLER() {
  SET_SWITCH(TEXT);
  SET MON_WNDTOP[0,1]=0;
  MON_HOME();
  EXIT();
}

FN LEFT_HANDLER() {
  MOVE_CURSOR_TO(XPOS-1,YPOS);
}

FN RIGHT_HANDLER() {
  MOVE_CURSOR_TO(XPOS+1,YPOS);
}

FN UP_HANDLER() {
  MOVE_CURSOR_TO(XPOS,YPOS-1);
}

FN DOWN_HANDLER() {
  MOVE_CURSOR_TO(XPOS,YPOS+1);
}

FN LOAD_HANDLER() {
  VAR LEN:1;
  POSITION_CURSOR(0,22);
  MON_CLREOP();
  PRINT_STRING(LOAD);
  SET LEN=GET_LINE();
  IF (LEN > 0) {
    SET (@FILE_NAME)[0,33]=MON_IN[0,33];
    LOAD_SCREEN();
  }
  DRAW_WINDOW();
}    

