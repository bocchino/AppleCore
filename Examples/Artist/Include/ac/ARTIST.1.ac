# DRAW THE WINDOW BELOW THE PICTURE
# -----------------------------------
FN DRAW_WINDOW() {
  VAR I:1=0;
  SET_COLOR(BLACK);
  HLINE(0,39,39);
  SET MON_WNDTOP[0,1]=21;
  POSITION_CURSOR(0,20);
  MON_CLREOP();
  WHILE (I<16) {
    SET_COLOR(I);
    PLOT(4+(I<<1),39);
    POSITION_CURSOR(4+(I<<1),20);
    PRINT_CHAR('A'+I);
    INCR I;
  }
  DISPLAY_WINDOW_TEXT();
}

DATA ARTIST "ARTIST";
DATA SIG    "BY ROB BOCCHINO";
DATA TYPE   "TYPE ";
DATA HELP   " FOR HELP";

FN DISPLAY_WINDOW_TEXT() {
  POSITION_CURSOR(0,21);
  INVERSE();
  PRINT_STRING(ARTIST);
  NORMAL();
  POSITION_CURSOR(40-STRING_LEN(SIG),21);
  PRINT_STRING(SIG);
  POSITION_CURSOR(0,23);
  PRINT_STRING(TYPE);
  INVERSE();
  PRINT_CHAR('?');
  NORMAL();
  PRINT_STRING(HELP);
}
# -----------------------------------
# INPUT LOOP
# -----------------------------------
FN ACCEPT_INPUT() {
  WHILE (TRUE) {
    DO_INTERVAL();
    SET CURSOR_ON=NOT CURSOR_ON;
  }
}

# LENGTH OF TIME TO FLASH CURSOR
CONST CURSOR_INTERVAL 50;

FN DO_INTERVAL() {
  VAR I:1=0;
  VAR CHAR:1;
  IF (CURSOR_ON)
    SHOW_CURSOR();
  ELSE
    HIDE_CURSOR();
  WHILE (I<CURSOR_INTERVAL) {
    IF (PDL_BUTTON_DOWN(0)) {
      SET_COLOR(PEN_COLOR);
      PLOT(XPOS,YPOS);
      SET_SCRN_COLOR();
    }
    SET CHAR=READ_KBD();
    IF (CHAR > $7F) {
      PROCESS_CHAR(CHAR);
    }
    INCR I;
  }
}
