DATA NO_CARRY "YOU AREN'T CARRYING ANYHING.";
DATA YOU_HAVE "YOU HAVE:\$0D\$0D";

FN CMD_INV_FN() {
  VAR I:1=0;
  IF (NUM_CARRIED=0) {
    PRINT_WORDS(NO_CARRY);
  }
  ELSE {
    PRINT_WORDS(YOU_HAVE);
    WHILE (I<NUM_CARRIED) {
      PRINT_HEX(CARRIED_OBJ(I),1);
      PRINT_WORDS(OBJ_NAME(CARRIED_OBJ(I)));
      MON_CROUT();
      INCR I;
    }
  }
}

