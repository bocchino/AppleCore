CONST NUM_CMDS 20;

DATA CMD_DONT_KNOW "I DON'T UNDERSTAND THAT COMMAND.";

FN DO_COMMAND() {
  VAR WORD:2=(@WORDS)[0,2];
  VAR CMD_NUM:1=FIND_WORD(WORD,
    CMD_STRS,NUM_CMDS);
  VAR CMD_FN:2;
  MON_CROUT();
  IF (CMD_NUM=-1) {
    PRINT_WORDS(CMD_DONT_KNOW);
    MON_CROUT();
  }
  ELSE {
    SET CMD_FN=CMD_FNS[CMD_NUM*2,2];
    CMD_FN();
    IF (NOT (CMD_FN=CMD_LOOK_FN)) {
      MON_CROUT();
    }
  }
}

