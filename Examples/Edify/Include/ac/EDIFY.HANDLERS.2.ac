# -----------------------------------
# EDIFY COMMAND HANDLERS, PART 2
# -----------------------------------
# CURRENT LI(N)E
# -----------------------------------
FN N_HANDLER() {
  VAR NEW_N:2;
  IF (EQ_CHAR(READ_CHAR(),BINDING_CHAR)) {
    NEXT_CHAR();
    SET NEW_N=PARSE_NUM();
    IF (NOT ERR_FLAG) {
      IF (NEW_N < 1 OR NEW_N > BUF_SIZE)
        ERROR(OUT_OF_RANGE);
      ELSE
        SET_N(NEW_N);
    }
  }
  ELSE IF (BUF_SIZE=0) {
    ERROR(BUFFER_EMPTY);
  }
  ELSE {
    PRINT_LINE(N_PTR,N);
  }
}
