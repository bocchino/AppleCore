CONST MODULE_SIZE        5;
# -----------------------------------
# STRING CONSTRUCTION INFO
# -----------------------------------
DATA OBJ_STR ".OBJ";

VAR NUM_STR:3;
VAR FILE_NAME:15;

VAR MODULE:1;
VAR OFFSET:1;
# -----------------------------------
# SET MODULE AND OFFSET
# -----------------------------------
FN SET_MODULE_TO(IDX:1) {
  SET MODULE=IDX/MODULE_SIZE;
  SET OFFSET=IDX-MODULE_SIZE*
    MODULE;
}


