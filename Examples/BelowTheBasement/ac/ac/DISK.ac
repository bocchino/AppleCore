# ISSUE A DOS COMMAND
# -----------------------------------
DATA FILE_NOT_FOUND "I COULDN'T FIND THE FILE";
DATA DISK_ERROR     "THERE'S A PROBLEM WITH THE DISK";

FN:1 ISSUE_DOS_CMD(CMD:2,FNAME:2) {
  VAR ERR:1;
  SET DOS_ERRNO[0,1]=0;
  PRINT_STRING(CMD);
  PRINT_STRING(FNAME);
  MON_CROUT();
  SET ERR=DOS_ERRNO[0,1];
  IF (ERR=DOS_NOT_FOUND)
    RESPOND(FILE_NOT_FOUND);
  ELSE IF (ERR > 0)
    RESPOND(DISK_ERROR);
  RETURN (ERR=0);
}


