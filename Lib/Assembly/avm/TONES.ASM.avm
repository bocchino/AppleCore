* -------------------------------
* SIMPLE TONE GENERATOR
* -------------------------------
COUNTER .BS 3
TONE.ASM
	LDA #8
	STA COUNTER+2
.1	LDA REPS
	STA COUNTER
	LDA REPS+1
	STA COUNTER+1
.2	LDY #0
	LDA ($44),Y
	LDX DELAY+1
.3	LDY DELAY
.4	DEY
	BNE .4
	DEX
	BNE .3
	LDA COUNTER
	ORA COUNTER+1
	BEQ .5
	DEC COUNTER
	DEX
	CPX COUNTER
	BNE .2
	DEC COUNTER+1
	JMP .2
.5	DEC COUNTER+2
	BNE .1
	RTS 


	