# --------------------------------------
# TEST NUM_TO_STR
# --------------------------------------

DATA STR_HEX "SHOULD BE FFFF: ";
DATA STR_DEC "SHOULD BE 65535: ";

FN MAIN() {
   VAR N:2=$FFFF;

   PRINT_STRING(STR_HEX);
   PRINT_HEX(@N,2);
   NUM_TO_STR(@N,2,10,MON_IN);
   MON_CROUT();

   PRINT_STRING(STR_DEC);
   PRINT_STRING(MON_IN);
   MON_CROUT();
}

INCLUDE "IO";
INCLUDE "STRING";
INCLUDE "CHAR";