# TEST NUM_TO_STR
# --------------------------------------

CONST MON_CROUT  $FD8E;
CONST INBUF      $200;

DATA STR_HEX "SHOULD BE FFFF: ";
DATA STR_DEC "SHOULD BE 65535: ";

FN PRINT_STRING(STR:2);
FN NUM_TO_STR(N:2,SIZE:1,RADIX:1,STR:2);
FN PRINT_HEX(N:2,SIZE:1);

FN MAIN() {
   VAR N:2=$FFFF;

   PRINT_STRING(STR_HEX);
   PRINT_HEX(@N,2);
   NUM_TO_STR(@N,2,10,INBUF);
   MON_CROUT();

   PRINT_STRING(STR_DEC);
   PRINT_STRING(INBUF);
   MON_CROUT();
}

INCLUDE "IO";
INCLUDE "STRING";
INCLDUE "CHAR";