# --------------------------------------
# SET SWITCH
# --------------------------------------
FN SET_SWITCH(SWITCH:2) {
  SET SWITCH[0,1]=0;
}
# --------------------------------------
# SET LO-RES COLOR
# --------------------------------------
FN SET_COLOR(COLOR:1) {
  SET ^A=COLOR;
  MON_SETCOL();
}
# --------------------------------------
# PLOT LO-RES BLOCK
# --------------------------------------
FN PLOT(X:1,Y:1) {
  SET ^Y=X;
  SET ^A=Y;
  MON_PLOT();
}
# --------------------------------------
# DRAW HORIZONTAL LINE
# --------------------------------------
FN HLINE(X1:1,X2:1,Y:1) {
  SET ^Y=X1;
  SET MON_H2[0,1]=X2;
  SET ^A=Y;
  MON_HLINE();
}
# --------------------------------------
# DRAW VERTICAL LINE
# --------------------------------------
FN VLINE(X:1,Y1:1,Y2:1) {
  SET ^Y=X;
  SET ^A=Y1;
  SET MON_V2[0,1]=Y2;
  MON_VLINE();
}
# --------------------------------------
# READ LO-RES SCREEN
# --------------------------------------
FN:1 SCRN(X:1,Y:1) {
  SET ^Y=X;
  SET ^A=Y;
  MON_SCRN();
  RETURN ^A;
}

