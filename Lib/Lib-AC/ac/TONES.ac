# TONE GENERATION
# --------------------------------------
VAR DELAY:2;
VAR REPS:2;
VAR COUNTER:2;

FN TONE_ASM();

FN TONE(PITCH:2,DURATION:2) {
  SET DELAY=PITCH;
  SET REPS =DURATION/DELAY;
  SET ($44)[0,2]=$C030;
  TONE_ASM();
}

FN REST(DURATION:2) {
   SET DELAY=$10;
   SET REPS=DURATION/DELAY;
   SET ($44)[0,2]=0;
   TONE_ASM();
}

INCLUDE "TONES.ASM.AVM";
