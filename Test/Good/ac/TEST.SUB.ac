# -------------------------------------
# TEST 4-BYTE SUBTRACTION
# -------------------------------------

CONST MON_CROUT  $FD8E;

DATA STR_A  "SHOULD BE 00100000: ";
DATA STR_B  "SHOULD BE 000F0001: ";
DATA STR_C  "SHOULD BE 0000FFFF: ";

FN PRINT_STRING(STR:2);
FN PRINT_HEX(N:2,SIZE:1);

FN MAIN() {
   VAR A:4 = $100000;
   VAR B:4 = $F0001;
   VAR C:4 = A-B;
   # PRINT A
   PRINT_STRING(STR_A);   
   PRINT_HEX(@A,4);
   MON_CROUT();
   # PRINT B
   PRINT_STRING(STR_B);
   PRINT_HEX(@B,4);
   MON_CROUT();
   # PRINT C
   PRINT_STRING(STR_C);   
   PRINT_HEX(@C,4);
   MON_CROUT();
}

