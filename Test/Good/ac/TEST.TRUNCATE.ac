# TEST TRUNCATION
# -------------------------------------

CONST MON_CROUT $FD8E;

DATA STR_N  "SHOULD BE 0000FFFF: ";
DATA STR_NT "SHOULD BE FFFF: ";

FN PRINT_STRING(STR:2);
FN PRINT_HEX(N:2,SIZE:1);

FN MAIN() {
   # INIT N WITH 4-BYTE VAL
   VAR N:4   = $0000FFFF;
   # TRUNCATE AND ASSIGN TO NT
   VAR NT:2  = N;
   # PRINT N
   PRINT_STRING(STR_N);   
   PRINT_HEX(@N,4);
   MON_CROUT();
   # PRINT NT
   PRINT_STRING(STR_NT);
   PRINT_HEX(@NT,2);
   MON_CROUT();
}

