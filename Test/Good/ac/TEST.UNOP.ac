# -------------------------------------
# TEST UNARY OPERATIONS
# -------------------------------------

DATA STR_N    "SHOULD BE 0000FFFF: ";
DATA STR_NEG  "SHOULD BE FFFF0001: ";
DATA STR_NOT  "SHOULD BE FFFF0000: ";
DATA STR_INCR "SHOULD BE 00010000: ";
DATA STR_DECR "SHOULD BE 0000FFFF: ";

FN MAIN() {
   VAR N:4     = $FFFF;
   VAR N_NEG:4 = -N;
   VAR N_NOT:4 = NOT N;
   # PRINT N
   PRINT_STRING(STR_N);   
   PRINT_HEX(@N,4);
   MON_CROUT();
   # PRINT N_NEG
   PRINT_STRING(STR_NEG);
   PRINT_HEX(@N_NEG,4);
   MON_CROUT();
   # PRINT N_NOT
   PRINT_STRING(STR_NOT);   
   PRINT_HEX(@N_NOT,4);
   MON_CROUT();
   # INCREMENT N AND PRINT
   INCR N;
   PRINT_STRING(STR_INCR);
   PRINT_HEX(@N,4);
   MON_CROUT();
   # DECREMENT N AND PRINT
   DECR N;
   PRINT_STRING(STR_DECR);
   PRINT_HEX(@N,4);
   MON_CROUT();
}

