# -------------------------------------
# TEST SIGNED AND UNSIGNED RIGHT SHIFT
# -------------------------------------

DATA STR1 "SHOULD BE FF000000: ";
DATA STR2 "SHOULD BE 00FF0000: ";
DATA STR3 "SHOULD BE FFFF0000: ";

FN MAIN() {
   VAR N:4 = $FF000000;
   VAR NS:4S = N;
   # PRINT N
   PRINT_STRING(STR1);   
   PRINT_HEX(@N,4);
   MON_CROUT();
   # SHIFT N AND PRINT
   PRINT_STRING(STR2);
   SET N = N >> 8;
   PRINT_HEX(@N,4);
   MON_CROUT();
   # PRINT NS
   PRINT_STRING(STR1);   
   PRINT_HEX(@NS,4);
   MON_CROUT();
   # SHIFT NS AND PRINT
   PRINT_STRING(STR3);
   SET NS = NS >> 8;
   PRINT_HEX(@NS,4);
   MON_CROUT();
}

INCLUDE "IO";
