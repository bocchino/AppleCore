# -------------------------------------
# TEST 4-BYTE SIGNED MULTIPLICATION
# -------------------------------------

CONST MON_CROUT  $FD8E;

DATA STR_A  "SHOULD BE FFFFFFFF: ";
DATA STR_B  "SHOULD BE FFFFFFFE: ";
DATA STR_C  "SHOULD BE 00000002: ";

FN PRINT_STRING(STR_PTR:2);
FN PRINT_NUM(N_PTR:2,SIZE:1);

FN MAIN() {
   VAR A:4S = -1;
   VAR B:4S = -2;
   VAR C:4S = A*B;
   # PRINT A
   PRINT_STRING(STR_A);   
   PRINT_NUM(@A,4);
   MON_CROUT();
   # PRINT B
   PRINT_STRING(STR_B);
   PRINT_NUM(@B,4);
   MON_CROUT();
   # PRINT C
   PRINT_STRING(STR_C);   
   PRINT_NUM(@C,4);
   MON_CROUT();
}

INCLUDE "IO";
