# -------------------------------------
# TEST SIGNED AND UNSIGNED EXTENSION
# -------------------------------------

CONST MON_CROUT $FD8E;

DATA STR_N  "SHOULD BE 0000FFFF: ";
DATA STR_NS "SHOULD BE FFFFFFFF: ";

FN PRINT_STRING(STR:2);
FN PRINT_HEX(N:2,SIZE:1);

FN MAIN() {
   VAR N:4   = $FFFF;
   VAR NS:4S = -1;
   # ZERO EXTENSION
   PRINT_STRING(STR_N);   
   PRINT_HEX(@N,4);
   MON_CROUT();
   # SIGN EXTENSION
   PRINT_STRING(STR_NS);
   PRINT_HEX(@NS,4);
   MON_CROUT();
}

INCLUDE "IO";
