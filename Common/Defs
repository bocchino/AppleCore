#
# Common definitions for AppleCore makefiles
#
COMMON=$(APPLECORE)/Common

# AppleCore source files
SRCS = $(wildcard ac/*.ac)

# AppleCore libraries
LIB=$(APPLECORE)/Lib
LIB-AC=$(LIB)/AppleCore
LIB-ACH=$(LIB)/AppleCore/ach
LIB-AVM=$(LIB)/Assembly

# AppleCore runtime
RUNTIME=$(APPLECORE)/Runtime

# AppleCore compiler
ACC = $(APPLECORE)/Compiler/bin/acc

# AppleCore/6502 assembler
SC-AVM-ASM = $(APPLECORE)/Assembler/bin/sc-avm-asm\
 -i $(LIB-AC)/avm:$(LIB-AVM)/avm:$(RUNTIME)/avm:avm -d obj $(OPTS)

# Build script
MAKE_ALL = perl $(APPLECORE)/Scripts/make-all.pl
