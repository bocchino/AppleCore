FN INIT_VARS() {
  VAR STACK_ADDR:@=AVM_STACK;

  # END OF CLIPBOARD IS TOP OF HEAP
  SET CB_END=AVM_SP_BOUND[0,@];
  SET CB_START=CB_END;
  # RESERVE BYTES FOR STACK
  SET BUF_START=AVM_STACK+MAX_STACK_SIZE;
  # SET NEW STACK BOUND
  SET AVM_SP_BOUND[0,@]=BUF_START-1;
  # CLEAR THE BUFFER
  CLEAR_BUFFER();
  # CLEAR THE CLIPBOARD
  CLEAR_CB();
}
