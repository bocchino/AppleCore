# -----------------------------------
# READ INPUT LINE AT IDX.  RETURN
# NO_CHAR IF THERE ARE NO MORE CHARS 
# IN THE LINE.
# -----------------------------------
FN READ_CHAR():1 {
  IF (INPUT_IDX >= INPUT_LEN)
    RETURN NO_CHAR;
  RETURN (@INPUT)[INPUT_IDX,1];
}
# -----------------------------------
# ADVANCE INPUT_IDX TO NEXT CHAR
# -----------------------------------
FN NEXT_CHAR() {
  IF (INPUT_IDX < INPUT_LEN)
    INCR INPUT_IDX;
}
# -----------------------------------
# PRINT AN ERROR MESSAGE
# -----------------------------------
DATA SEPARATOR ": ";
FN ERROR(MSG:@) {
  PRINT_CHAR(COMMAND);
  PRINT_STRING(SEPARATOR);
  PRINT_STRING(MSG);
  MON_CROUT();
  SET ERR_FLAG=TRUE;
}
# -----------------------------------
# PARSE NUMERIC ARGUMENT
# -----------------------------------
FN PARSE_NUM():2 {
  VAR CH:1=READ_CHAR();
  IF (EQ_CHAR(CH,'K')) {
    RETURN K_AS_NUM();
  }
  ELSE IF (EQ_CHAR(CH,'E')) {
    RETURN E_AS_NUM();
  }
  ELSE IF (EQ_CHAR(CH,'N')) {
    RETURN N_AS_NUM();
  }
  ELSE IF (EQ_CHAR(CH,'W')) {
    RETURN W_AS_NUM();
  }
  RETURN LITERAL_NUM();
}
# -----------------------------------
# GET VALUE OF E, ERROR IF NONE
# -----------------------------------
FN E_AS_NUM():2 {
  NEXT_CHAR();
  RETURN BUF_SIZE;
}
# -----------------------------------
# GET VALUE OF K, ERROR IF NONE
# -----------------------------------
FN K_AS_NUM():2 {
  NEXT_CHAR();
  IF (BUF_SIZE=0) {
    ERROR(BUFFER_EMPTY);
    RETURN -1;
  }
  ELSE IF (K=NO_K) {
    ERROR(MARK_NOT_SET);
    RETURN -1;
  }
  RETURN K;
}
# -----------------------------------
# GET VALUE OF N, ERROR IF NONE
# -----------------------------------
FN N_AS_NUM():2 {
  NEXT_CHAR();
  IF (BUF_SIZE=0) {
    ERROR(BUFFER_EMPTY);
    RETURN -1;
  }
  RETURN N;
}
# -----------------------------------
# GET VALUE OF W, ERROR IF NONE
# -----------------------------------
FN W_AS_NUM():2 {
  NEXT_CHAR();
  RETURN W;
}
# -----------------------------------
# PARSE LITERAL NUMBER
# -----------------------------------
FN LITERAL_NUM():2 {
  VAR I:1=0;
  VAR DONE:1=FALSE;
  VAR NUM:2;
  VAR CH:1;
  WHILE ((I < 5) AND NOT DONE) {
    SET CH=READ_CHAR();
    IF (IS_DIGIT(CH)) {
      SET (@NUM_STR)[I,1]=CH;
      NEXT_CHAR();
      INCR I;      
    }
    ELSE {
      SET (@NUM_STR)[I,1]=0;
      SET DONE=TRUE;
    }
  }
  IF (I > 0) {
    STR_TO_NUM(@NUM_STR,10,@NUM,2);
    RETURN NUM;
  }
  ERROR(EXPECTED_NUM_ARG);    
  RETURN -1;
}
# -----------------------------------
# IS CH A DIGIT?
# -----------------------------------
FN IS_DIGIT(CH:1):1 {
  SET CH=CH AND $7F;
  RETURN (CH >= '0') AND (CH <= '9');
}
